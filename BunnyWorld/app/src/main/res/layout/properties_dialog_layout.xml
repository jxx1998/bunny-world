    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_columnSpan="2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Font: "
            android:textSize="15sp"/>


        <RadioGroup
            android:id="@+id/font_group"
            android:orientation="horizontal"
            android:layout_row="6"
            android:layout_columnSpan="2"
            android:checkedButton="@+id/defaultFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RadioButton
                android:id="@id/defaultFont"
                android:text="Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/monospace"
                android:text="Monospace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/sansSerif"
                android:text="Sans Sarif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/serif"
                android:text="Sarif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>
    </LinearLayout>

    <GridLayout
        android:layout_row="8"
        android:layout_column="0"
        android:columnCount="2"
        android:rowCount="2">

        <LinearLayout
